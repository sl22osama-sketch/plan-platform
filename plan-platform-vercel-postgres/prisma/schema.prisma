generator client { provider = "prisma-client-js" }

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(COORDINATOR)
  createdAt DateTime @default(now())

  plans     Plan[]
}

model Plan {
  id          String   @id @default(cuid())
  teacherName String
  gradeLevel  String
  weekLabel   String
  subject     String   @default("اللغة العربية")
  planText    String
  status      PlanStatus @default(SUBMITTED)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  evaluation  Evaluation?
}

model Evaluation {
  id             String   @id @default(cuid())
  planId         String   @unique
  plan           Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  overallPercent Int
  overallSummary String
  strengths      Json
  improvements   Json
  results        Json
  isFinal        Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Role { COORDINATOR ADMIN }
enum PlanStatus { SUBMITTED AI_DONE REVIEWED APPROVED }
